{%- set pageTitle = title + ' - ' + site.name %}

{# For the homepage just use the site name as the title #}
{%- if templateClass === "home" %}
  {% set pageTitle = site.name %}
{% endif %}

{%- set currentUrl = site.url + page.url %}

<title>{{ pageTitle }}</title>
<link rel="canonical" href="{{ currentUrl }}" />

<meta property="og:site_name" content="{{ site.name }}" />
<meta property="og:title" content="{{ pageTitle }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ currentUrl }}" />
<meta property="og:image" content="https://emilymccracken.com/images/social-share.png"/>

<meta name="twitter:image" content="https://emilymccracken.com/social-share.png"/>
<meta property="og:image:alt" content="Vermont Artist Emily McCracken"/>
<meta name="twitter:image:alt" content="Vermont Artist Emily McCracken"/>

<meta name="description" content="{{ site.description }}"/>
<meta name="twitter:description" content="{{ site.description }}"/>
<meta property="og:description" content="{{ site.description }}"/>