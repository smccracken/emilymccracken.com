{%- set pageTitle = title + ' - ' + meta.name %}

{# For the homepage just use the site name as the title #}
{%- if templateClass === "home" %}
  {% set pageTitle = meta.name %}
{% endif %}

{%- set currentUrl = meta.url + page.url %}

<title>{{ pageTitle }}</title>
<link rel="canonical" href="{{ currentUrl }}" />
<link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">
<link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>

<meta name="theme-color" content="#ffffff">
<meta name="generator" content="{{ eleventy.generator }}" />

<meta property="og:site_name" content="{{ meta.name }}" />
<meta property="og:title" content="{{ pageTitle }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ currentUrl }}" />
<meta property="og:image" content="https://emilymccracken.com/assets/images/social-share.png"/>

<meta name="twitter:image" content="https://emilymccracken.com/social-share.png"/>
<meta property="og:image:alt" content="Vermont Artist Emily McCracken"/>
<meta name="twitter:image:alt" content="Vermont Artist Emily McCracken"/>

<meta name="description" content="{{ meta.description }}"/>
<meta name="twitter:description" content="{{ meta.description }}"/>
<meta property="og:description" content="{{ meta.description }}"/>