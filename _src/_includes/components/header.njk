<header role="banner">
	<nav class="main-nav">
		<a class="logo" href="/" title="Home"></a>
		{%- for nav in collections.nav -%}
			{% set isCurrent = (nav.url == page.url) %}
			<li class="nav-item{% if isCurrent %} nav-item--active{% endif %}"><a href="{% if isCurrent %}#main{% else %}{{ nav.url | url }}{% endif %}" class="nav__link" {% if isCurrent %}aria-current="page"{% endif %} title="{{ nav.data.title }}">{{ nav.data.navtitle }}</a></li>
		{%- endfor %}
		</ul>
	</nav>
	<h1>{{ title }}</h1>
</header>